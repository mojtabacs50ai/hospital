
@{

    Layout = "~/Views/sheer/leyout.cshtml";
    
    }

<select id="dep">
    </select>
<select id="docs">
    <option>دکتر</option>
</select>

<div class="panel panel- primary filterable">
    <div class="panel-heading">
        <h3 class="panel-title status">نوبتها</h3>
        <div class="pull-left">
            <button class="btn btn-default btn-xs btn-filter"><span class="fas fa-filter"></span>فیلتر</button>
            <button class="btn btn-success btn-xs" onclick="addparam()"><span class="fas fa-plus"></span>اضافه کردن نوع نوبت</button>
            <button class="btn btn-danger btn-xs" onclick="deleteparam()"><span class="fas fa-minus"></span>حذف نوع نوبت</button>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr class="filters">
                <th><input type="text" class="form-control" placeholder="#" disabled></th>
                <th><input type="text" class="form-control" placeholder="نوع نوبت" disabled></th>
                <th><input type="text" class="form-control" placeholder="دقیقه" disabled></th>
            </tr>
        </thead>
        <tbody id="tbl_type">
        </tbody>
    </table>
</div>

@section script{
    <script src="~/assets/js/visit_type.js"></script>
    }